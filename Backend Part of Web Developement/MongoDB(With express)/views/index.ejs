<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Whatsapp Chats</title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <h3>All Chats!</h3>
    <form method="get" action="/chats/new">
      <button>New Chat</button>
    </form>
    <br />
    <% for(let chat of chats) { %>
    <div class="chat">
      <p>From: <i><%= chat.from %></i></p>
      <div class="msg">
        <p>Message: <%= chat.message %></p>
        <form method="get" action="/chats/<%= chat.id %>/edit">
          <button>Edit</button>
        </form>
        <form method="post" action="/chats/<%= chat.id %>?_method=DELETE">
          <button>Delete</button>
        </form>
        <form action="/chats/<%= chat._id %>" method="get">
          <button>Show</button>
        </form>
      </div>
      <p>Received by: <i><%= chat.to %></i></p>
      <hr />
      <p>
        Time: <%= chat.timestamp.toString().split(" ")[4] %> <br />
        Date: <%= chat.timestamp.toString().split(" ").slice(0, 4).join(" ") %>
      </p>
    </div>

    <br /><br />
    <% } %>
  </body>
</html>
