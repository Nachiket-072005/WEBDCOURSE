<% layout('/layouts/boilerplate.ejs') %>
<body>
  <div class="row mb-3">
    <div class="col-8 offset-3 mt-3">
      <h3><strong><%= listing.title %></strong></h3>
    </div>
    <div class="card col-6 offset-3 show-card listing-card">
      <img
        src="<%= listing.image %>"
        class="card-img-top show-img"
        alt="listing_image"
      />
      <div class="card-body">
        <p class="card-text">
          Description: <%= listing.description %> <br />
          Price: &#8377;<%= listing.price.toLocaleString('en-IN') %><br />
          Location: <%= listing.location %><br />
          Country: <%= listing.country %> <br />
        </p>
      </div>
    </div>

    <div class="btns">
      <a
        href="/listings/<%= listing._id %>/edit"
        class="btn btn-dark edit-btn col-1 offset-3"
        >Edit</a
      >
      <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
        <button type="submit" class="btn btn-dark offset-5">Delete</button>
      </form>
    </div>
  </div>
</body>
